{
  "name": "chrisplusr/teste-qodo.com.br",
  "description": "teste-qodo.com.br",
  "require": {
    "php": "^8.0|^8.1|^8.2|^8.3",
    "ext-json": "*",
    "apiki/mainwp-child": "^6.1",
    "roots/wordpress": "^6.3",
    "wpackagist-plugin/updraftplus":"^1.22.14"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "scripts": {
    "move-wordpress": [
      "rm -rf wordpress/wp-content/plugins/*",
      "rm -rf wordpress/wp-content/themes/*",
      "cp -rf wordpress/* .",
      "rm -rf wordpress"
    ],
    "post-install-cmd": [
      "@move-wordpress"
    ],
    "post-update-cmd": [
      "@move-wordpress"
    ]
  },
  "config": {
    "allow-plugins": {
      "roots/wordpress-core-installer": true,
      "composer/installers": true
    }
  }
}
